generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Animal {
  // PK
  id String @id @default(uuid())

  // Columns
  name           String
  birthDate      DateTime
  identification Int?     @unique

  // Audite
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relation
  animalOwners AnimalOwner[]
  healthRecord HealthRecord?
}

model Owner {
  // PK
  id String @id @default(uuid())

  // Columns
  firstName   String
  lastName    String
  email       String @unique
  adresse     String
  phoneNumber Int    @unique

  // Audite
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relation
  animalOwners AnimalOwner[]
  userProfiles UserProfile?
}

model AnimalOwner {
  // PK
  id String @id @default(uuid())

  //FK
  animalId String
  ownerId  String

  // Columns
  startDate DateTime
  endDate   DateTime?

  // Audite
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relation
  animal Animal @relation(fields: [animalId], references: [id])
  owner  Owner  @relation(fields: [ownerId], references: [id])
}

model Veterinarian {
  // PK
  id            String @id @default(uuid())

  // Columns
  firstName     String
  lastName      String
  email         String @unique
  phone         Int @unique
  licenseNumber String @unique

  // Audite
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relation
  medicalCares MedicalCare[]
  userProfiles UserProfile?
}

// -----AUTH-----


model User {
  // PK
  id       String @id @default(uuid())

  // Columns
  email    String @unique
  password String

  // FK
  roleId String

  // Audite

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // relation
  role          Role           @relation(fields: [roleId], references: [id])
  refreshTokens RefreshToken[]
  profile UserProfile?
}

model UserProfile {
  id String @id @default(uuid())

  // FK Auth
  userId String @unique

  // FK Common (optionnelles mais exclusives)
  ownerId        String? @unique
  veterinarianId String? @unique

  createdAt DateTime @default(now())

  // Relations (auth â†’ common OK)
  user         User         @relation(fields: [userId], references: [id])
  owner        Owner?       @relation(fields: [ownerId], references: [id])
  veterinarian Veterinarian? @relation(fields: [veterinarianId], references: [id])
}

model Role {
  // PK
  id       String @id @default(uuid())

  // Columns
  roleName String @unique

  // Audite
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // relation
  users User[]
}

model RefreshToken {
  // PK
  id        String   @id @default(uuid())

  // Columns
  token     String   @unique
  expiresAt DateTime

  // FK
  userId String

  // relation
  user   User   @relation(fields: [userId], references: [id])

  // Audit
  createdAt DateTime @default(now())
}

// -----Health_Record-----

model HealthRecord {
  // PK
  id String @id @default(uuid())

  // Columns
  description String
  recordDate  DateTime

  // FK 
  animalId String @unique

  // Audit
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relation
  animal       Animal        @relation(fields: [animalId], references: [id], onDelete: Cascade)
  medicalCares MedicalCare[]
}

model MedicalCare {
  // PK
  id String @id @default(uuid())

  // Columns
  description String
  careDate    DateTime

  // FK
  healthRecordId String
  veterinarianId String

  // Audit 
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relations
  healthRecord HealthRecord         @relation(fields: [healthRecordId], references: [id], onDelete: Cascade)
  veterinarian Veterinarian         @relation(fields: [veterinarianId], references: [id])
  vaccines     MedicalCareVaccine[]
  tags         MedicalCareTag[]

  @@index([healthRecordId])
  @@index([veterinarianId])
}

model Tag {
  // PK
  id String @id @default(uuid())

  // Columns
  name String @unique

  // Audit
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relations
  medicalCares MedicalCareTag[]
}

model MedicalCareTag {
  // FK
  medicalCareId String
  tagId         String

  // Audit
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relations
  medicalCare MedicalCare @relation(fields: [medicalCareId], references: [id], onDelete: Cascade)
  tag         Tag         @relation(fields: [tagId], references: [id])

  @@id([medicalCareId, tagId])
}

model MedicalCareVaccine {
  // FK
  medicalCareId String
  vaccineId     String

  // Audit
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relations
  medicalCare MedicalCare @relation(fields: [medicalCareId], references: [id], onDelete: Cascade)
  vaccine     Vaccine     @relation(fields: [vaccineId], references: [id])

  @@id([medicalCareId, vaccineId])
}

model Vaccine {
  // PK
  id String @id @default(uuid())

  // Columns
  name String

  //FK
  vaccineTypeId String

  // Audit
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relations
  vaccineType  VaccineType          @relation(fields: [vaccineTypeId], references: [id])
  medicalCares MedicalCareVaccine[]
}

model VaccineType {
  // PK
  id String @id @default(uuid())

  // Columns
  name String @unique

  // Audit
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  isDeleted Boolean   @default(false)

  // Relations
  vaccines Vaccine[]
}
