generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Animal {
  // PK
  id String @id @default(uuid())

  // Columns
  name String
  birthDate DateTime
  identification Int? @unique

  // Audite
  createdAt DateTime @default(now())
  updatedAt DateTime?
  isDeleted Boolean @default(false)

  // Relation
  animalOwners AnimalOwner[]
}

model Owner {
  // PK
  id String @id @default(uuid())

  // Columns
  firstName String
  lastName String
  email String @unique
  adresse String
  phoneNumber Int @unique

  // Audite
  createdAt DateTime @default(now())
  updatedAt DateTime?
  isDeleted Boolean @default(false)

  // Relation
  animalOwners AnimalOwner[]
}

model AnimalOwner {
  // PK
  id String @id @default(uuid())

  //FK
  animalId String
  ownerId String

  // Columns
  startDate DateTime
  endDate   DateTime?

  // Audite
  createdAt DateTime @default(now())
  updatedAt DateTime?
  isDeleted Boolean @default(false)

  // Relation

  animal Animal @relation( fields: [animalId], references: [id])
  owner Owner @relation( fields: [ownerId], references: [id])

}

model Veterinarian {
    id String @id @default(uuid())
    first_name String
    last_name String
    email String @unique
    phone String @unique
    licenseNumber String @unique

    // Audite

    createdAt DateTime @default(now())
    updatedAt DateTime?
    isDeleted Boolean @default(false)

    // Relation

}